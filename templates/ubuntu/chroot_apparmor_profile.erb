# Generated by Chef for <%= node['fqdn'] %>
# Local modifications will be overwritten.
<% if @chroot -%>
<%= @chroot_dir %>/etc/bind/** r,
<%= @chroot_dir %>/var/lib/bind/** rw,
<%= @chroot_dir %>/var/lib/bind/ rw,
<%= @chroot_dir %>/var/cache/bind/** rw,
<%= @chroot_dir %>/var/cache/bind/ rw,
<%= @chroot_dir %>/dev/random r,
<%= @chroot_dir %>/dev/urandom r,
<%= @chroot_dir %>/dev/null rw,
<%= @chroot_dir %>/{var/,}run/named/session.key rw,
<%= @chroot_dir %>/{var/,}run/named/named.pid rw,
<%= @chroot_dir %>/var/tmp/DNS_* rw,
  <% @log_files.each do |file| -%>
<%= @chroot_dir %><%= file %> rw,
  <% end -%>
<% else -%>
  <% @log_files.each do |file| -%>
<%= file %> rw,
  <% end -%>
<% end -%>
